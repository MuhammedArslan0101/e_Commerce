@model e_Commerce.Models.UserCard
@{
    ViewBag.Title = "ode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var monthlist = new List<int>();
    for (int i = 1; i <= 12; i++)
    {
        monthlist.Add(i);
    }

    var yearlist = new List<int>();
    for (int i = 2022; i <= 2030; i++)
    {
        yearlist.Add(i);
    }
}


@using (Html.BeginForm("pay", "Order", FormMethod.Get, new { @class = "form-horizontal" }))
{


    <div class="control-group">
        <label class="control-label" for="inputFname">Card Name <sup>*</sup></label>
        <div class="controls">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CardName, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                @Html.ValidationMessageFor(model => model.CardName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputFname">Card No <sup>*</sup></label>
        <div class="controls">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CardNum, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                @Html.ValidationMessageFor(model => model.CardNum, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputFname">Cvc No <sup>*</sup></label>
        <div class="controls">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cvc, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                @Html.ValidationMessageFor(model => model.Cvc, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputFname">Expired Month<sup>*</sup></label>
        <div class="controls">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ExpMonth,new SelectList(monthlist), new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                @Html.ValidationMessageFor(model => model.ExpMonth, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputFname">Expired Year <sup>*</sup></label>
        <div class="controls">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Expyear,new SelectList(yearlist) ,new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } })
                @Html.ValidationMessageFor(model => model.Expyear, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>



    <div class="form-group">
        <label for="" class="col-sm-4 control-label"> </label>
        <div class="col-sm-8">
            <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Pay</button>
        </div>
    </div>

}