@using e_Commerce.Models
@model IEnumerable<UserOrder>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="span12">

        <div class="well well-small">

            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Order No</th>
                        <th>Order Date</th>
                        <th>Total Amount ($)</th>
                        <th>Order State</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderDate</td>
                            <td>@item.Total</td>
                            <td>@item.OrderState</td>
                            <td>@Html.ActionLink("Order Details", "Details", new { id = @item.Id }, new { @class = "btn btn-primary" })</td>
                        </tr>
                    }
                </tbody>
            </table><br>


        </div>
    </div>
</div>

