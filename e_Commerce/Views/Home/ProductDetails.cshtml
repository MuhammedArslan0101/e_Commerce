@using e_Commerce.Entity
@model Product

    <div class="row">
        <div id="sidebar" class="span3">
            <div class="well well-small">
                <ul class="nav nav-list">
                    @Html.Action("_CategoryList", "Category")

                    <li style="border:0"> &nbsp;</li>
                    @Html.Action("Summary", "Cart")
                </ul>
            </div>

            <div class="well well-small alert alert-warning cntr">
                <h2>50% Discount</h2>
                <p>
                    only valid for online order. <br><br><a class="defaultBtn" href="#">Click here </a>
                </p>
            </div>
            <div class="well well-small"><a href="#"><img src="/Site/shop-cart/assets/img/paypal.jpg" alt="payment method paypal"></a></div>

            <a class="shopBtn btn-block" href="#">Upcoming products <br><small>Click to view</small></a>
            <br>
            <br>
            @Html.Action("_FeaturedProductList", "Home")

        </div>
        <div class="span9">
            <ul class="breadcrumb">
                <li><a href="/Home/Index">Home</a> <span class="divider">/</span></li>
                <li><a href="/Home/Product">Products</a> <span class="divider">/</span></li>
                <li class="active">Deatails Of Product</li>
            </ul>
            <div class="well well-small">
                <div class="row-fluid">
                    <div class="span5">
                        <div id="myCarousel" class="carousel slide cntr">
                            
                                <div class="item active">
                                    <a href="#"> <img src="~/Content/images/@Model.Image" alt="" style="width:100%"></a>
                                </div>
                        </div>
                    </div>
                    <div class="span7">
                        <h3>Name : @Model.Name </h3>
                        <hr class="soft">
                        @using (Html.BeginForm("AddToCart", "Cart", new { @class = "form-horizontal qtyFrm" }))
                        {           
                           @Html.HiddenFor(i=> i.Id)
                            <div class="control-group">
                                <label class="control-label"><span>Price : @Model.Price</span></label>
                                
                            </div>
                            <h4>Stock : @Model.Stock</h4>
                            <p>
                               Description : @Model.Description
                            </p><p>
                                <button type="submit" class="shopBtn"><span class=" icon-shopping-cart"></span> Add to cart</button>
                            </p>
                        }
                    </div>
                </div>
                <hr class="softn clr">


                

            </div>
        </div>
    </div>
